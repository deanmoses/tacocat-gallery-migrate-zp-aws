{
  "compileOnSave": true,
    "compilerOptions": {
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "ES2020",
      "sourceMap": true,
      "outDir": ".dist",
    },
    "include": ["**/*", "jest.config.ts"],
    "exclude": ["**/node_modules", ".dist"],
  }
  